<section id="section1" class="panel">

    <h1 class="user-panel-heading">
        Here are Noah Fainer's Favourite Things
    </h1>

    <div class="team">
        <!-- loop through all our team members and put their info on the page -->
        <!-- this is exactly like a forEach loop with plain javascript -->
        {{#each item}}
        <div class="user-panel">
            <img class="u-image" src="images/{{image}}" alt="image">

            <h1>{{title}}</h1>

            <div class="box">
            <p>{{description}}</p>
            <p>{{reason}}</p>
            <button><a href="{{link}}">{{title}}</a></button>
            </div>


       
        </div>

        {{/each}}
         
    </div>
    </div>

</section>
